{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022", "DOM"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "lib"
    },
    "exclude": ["node_modules"]
}